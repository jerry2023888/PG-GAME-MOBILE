{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"noImplicitAny": false,
		"strict": true,
		"jsx": "preserve",
		"paths": {
			"@/*": [
				"./src/*"
			]
		},
		"sourceMap": true,
		"resolveJsonModule": true,
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"lib": [
			"esnext",
			"dom",
		],
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.tsx",
		"src/**/*.vue"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}